<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
<display-name>Recipe Book</display-name>
 <context-param>
  <param-name>jdbcURL</param-name>
  <param-value>jdbc:mysql://localhost:3306/MyRecipeBook</param-value>
 </context-param>

  <context-param>
    <param-name>jdbcUsername</param-name>
    <param-value>root</param-value>
  </context-param>

  <context-param>
    <param-name>jdbcPassword</param-name>
    <param-value>joshsar56</param-value>
  </context-param>

<servlet>
  <servlet-name>RecipeServlet</servlet-name>
  <servlet-class>servlets.RecipeServlet</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>RecipeServlet</servlet-name>
  <url-pattern>/</url-pattern>
</servlet-mapping>

</web-app>
